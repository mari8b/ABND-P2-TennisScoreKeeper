<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#F6FF00</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ScoreBoardHeader" parent="AppTheme">
        <item name="android:background">#D93F51B5</item>
    </style>

    <style name="ScoreBoard" parent="AppTheme">
        <item name="android:background">#D9000000</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="VerticalLine" parent="AppTheme">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="HorizontalLine" parent="VerticalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="PlusButton" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>
